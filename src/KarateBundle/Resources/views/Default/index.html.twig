{% extends '::base.html.twig' %}

{% block body %}
    <style>
        .classes_group{
            max-width:560px;
            margin: 0 auto;
        }
        p {
            text-indent: 50px;
        }
    </style>

    <h3 class="classes_group">Form Classes</h3>
    <div class="panel-group classes_group" id="accordion" role="tablist" aria-multiselectable="true">
        {% for class in form_classes %}
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="heading{{ class.class_id }}">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ class.class_id }}" aria-expanded="false" aria-controls="collapse{{ class.class_id }}">
                            {{ class.class_name }}
                        </a>
                    </h4>
                </div>
                <div id="collapse{{ class.class_id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{ class.class_id }}">
                    <div class="panel-body">
                        <h4>Class Details</h4>
                        <p>Title: {{ class.class_name }}</p>
                        <p>Class Start: {{ class.start_date }}</p>
                        <p>Class End: {{ class.end_date }}</p>
                        <h4>Meeting Details</h4>
                        {% for meeting in class.meeting %}
                            <p>Instructor: {{ meeting.instructor_fname }} {{ meeting.instructor_lname }}</p>
                            <p>Meeting Time: {{ meeting.instructor_meeting }}</p>
                        {% endfor %}
                        <h4>Test Details</h4>
                        <p>Instructor: {{ class.test_instructor_fname }} {{ class.test_instructor_lname }}</p>
                        <p>Meeting Time: {{ class.test_instructor_meeting }}</p>
                        <p>Description: {{ class.test_instructor_description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <br>
